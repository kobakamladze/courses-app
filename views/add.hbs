<form action="/add" method="POST">

  <div class="input-field col s12">
    <input id="title" name="title" type="text" class="validate" required />
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name of course"></span>
  </div>

  <div class="input-field col s12">
    <input
      id="price"
      name="price"
      type="number"
      class="validate"
      required
      min="1"
    />
    <label for="price">Course name</label>
    <span class="helper-text" data-error="Enter price/number"></span>
  </div>

  <div class="input-field col s12">
    <input id="img" name="image" type="text" class="validate" required />
    <label for="img">URL of image</label>
    <span class="helper-text" data-error="Enter url of image"></span>
  </div>

  <button class="btn btn-primary"></button>
</form>