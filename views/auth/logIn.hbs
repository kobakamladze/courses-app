<div style='padding-top: 1rem;'>

  <div class='row'>
    <div class='col s12'>
      {{! Navigation }}
      <ul class='tabs'>
        <li class='tab col s6'><a href='#login'>Log In</a></li>
        <li class='tab col s6'><a class='active' href='#register'>Sign Up</a></li>
      </ul>
    </div>
    {{! LOG IN }}
    <div id='login' class='col s6 offset-s3'>
      <h1>Sign In</h1>

      <form action='/auth/logIn' method='POST'>

        {{#if logInError.length}}
          <p
            style='padding: 6px 4px; background-color: rgba(255, 0, 0, 0.1);
            border: 1px solid rgba(255, 0, 0, 1);
            border-radius: 5px;
            color:rgba(255, 0, 0, 1);
            font-weight: 500;
            text-align: center;'
          >{{logInError}}</p>
        {{/if}}

        <div class='input-field col s12'>
          <input
            id='email'
            name='email'
            type='text'
            class='validate'
            required
          />
          <label for='email'>Email</label>
          <span class='helper-text' data-error='Enter Email'></span>
        </div>

        <div class='input-field col s12'>
          <input
            id='password'
            name='password'
            type='password'
            class='validate'
            required
          />
          <label for='password'>Password</label>
          <span class='helper-text' data-error='Enter Password'></span>
        </div>

        <input type='hidden' name='_csrf' value='{{csurf}}' />

        <button class='btn btn-primary' type='submit'>Log In</button>
      </form>
    </div>
    {{! REGISTER }}
    <div id='register' class='col s6 offset-s3'>
      <h1>Sign Up</h1>

      <form action='/auth/register' method='POST'>

        {{#if registerError}}
          <p
            style='padding: 6px 4px; background-color: rgba(255, 0, 0, 0.1);
            border: 1px solid rgba(255, 0, 0, 1);
            border-radius: 5px;
            color:rgba(255, 0, 0, 1);
            font-weight: 500;
            text-align: center;'
          >{{registerError}}</p>
        {{/if}}

        <div class='input-field col s12'>
          <input
            id='remail'
            name='email'
            type='email'
            class='validate'
            required
          />
          <label for='remail'>Email</label>
          <span class='helper-text' data-error='Enter Email:'></span>
        </div>

        <div class='input-field col s12'>
          <input
            id='rpassword'
            name='password'
            type='password'
            class='validate'
            required
          />
          <label for='rpassword'>Enter Password</label>
          <span class='helper-text' data-error='Enter Password'></span>
        </div>

        <div class='input-field col s12'>
          <input
            id='confirm'
            name='confirm'
            type='password'
            class='validate'
            required
          />
          <label for='confirm'>Confirm Password</label>
          <span class='helper-text' data-error='Passwords do not match:'></span>
        </div>

        <input type='hidden' name='_csrf' value='{{csurf}}' />

        <button class='btn btn-primary' type='submit'>Sign Up</button>
      </form>
    </div>
  </div>

</div>